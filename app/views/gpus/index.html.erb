<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">
      GPU Catalog
    </h1>
  </div>
  
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full leading-normal">
      <thead>
        <tr class="border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
          <th class="px-5 py-3">Brand</th>
          <th class="px-5 py-3">Name</th>
       
          <th class="px-5 py-3 text-center">Gpu Memory (GB)</th>
          <th class="px-5 py-3 text-center">Gpu Memory Type</th>
          <th class="px-5 py-3 text-right">Gpu Core Clock (Mhz)</th>
          <th class="px-5 py-3 text-right">Gpu Core Boost (Mhz)</th>
          <th class="px-5 py-3 text-right">TDP (Watts)</th>
          <th class="px-5 py-3 text-right">Price</th>
          <th class="px-5 py-3"></th>
        </tr>
      </thead>
      <tbody>
        <% @gpus.each do |gpu| %>
          <tr class="hover:bg-gray-50 border-b border-gray-200">
            <td class="px-5 py-5 text-sm">
              <p class="text-gray-900 whitespace-no-wrap"><%= gpu.brand %></p>
            </td>
            <td class="px-5 py-5 text-sm">
              <p class="text-gray-900 whitespace-no-wrap font-semibold"><%= gpu.name %></p>
            </td>
            <td class="px-5 py-5 text-sm">
              <p class="text-gray-900 whitespace-no-wrap"><%= gpu.gpu_memory %></p>
            </td>
            <td class="px-5 py-5 text-sm">
              <p class="text-gray-900 whitespace-no-wrap font-semibold"><%= gpu.gpu_memory_type %></p>
            </td>
            <td class="px-5 py-5 text-sm text-center">
              <p class="text-gray-900 whitespace-no-wrap"><%= gpu.gpu_core_clock_mhz %></p>
            </td>
            <td class="px-5 py-5 text-sm text-center">
              <p class="text-gray-900 whitespace-no-wrap"><%= gpu.gpu_core_boost_mhz%></p>
            </td>
            <td class="px-5 py-5 text-sm text-right">
              <p class="text-gray-900 whitespace-no-wrap"><%= gpu.wattage %></p>
            </td>
            <td class="px-5 py-5 text-sm text-right">
              <%# Format price from cents to dollars %>
              <p class="text-green-600 font-bold whitespace-no-wrap">$<%= '%.2f' % (gpu.price_cents / 100.0) %></p>
            </td>
            <td class="px-5 py-5 text-sm text-center">
              <%# This "Add" button only appears if a @build_id is present %>
              <% if @build_id.present? %>
                <%= button_to 'Add', build_build_items_path(build_id: @build_id, part_id: gpu.id, part_class: gpu.class.name),
                              params: { part_id: gpu.id },
                              class: "bg-green-500 hover:bg-green-700 text-white font-bold py-1 px-3 rounded text-xs" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
