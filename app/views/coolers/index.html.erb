<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">
      CPU Cooler Catalog
    </h1>
  </div>
  
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full leading-normal">
      <thead>
        <tr class="border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
          <th class="px-5 py-3">Brand</th>
          <th class="px-5 py-3">Name</th>
          <th class="px-5 py-3 text-center">Type</th>
          <th class="px-5 py-3 text-center">Fan Size (mm)</th>
          <th class="px-5 py-3 text-left">Supported Sockets</th>
          <th class="px-5 py-3 text-right">Price</th>
          <th class="px-5 py-3"></th>
        </tr>
      </thead>
      <tbody>
        <% @coolers.each do |cooler| %>
          <tr class="hover:bg-gray-50 border-b border-gray-200">
            <td class="px-5 py-5 text-sm">
              <p class="text-gray-900 whitespace-no-wrap"><%= cooler.brand %></p>
            </td>
            <td class="px-5 py-5 text-sm">
              <p class="text-gray-900 whitespace-no-wrap font-semibold"><%= cooler.name %></p>
            </td>
            <td class="px-5 py-5 text-sm text-center">
              <p class="text-gray-900 whitespace-no-wrap"><%= cooler.cooler_type %></p>
            </td>
            <td class="px-5 py-5 text-sm text-center">
              <p class="text-gray-900 whitespace-no-wrap font-semibold"><%= cooler.cooler_fan_size_mm %></p>
            </td>
            <td class="px-5 py-5 text-sm">
              <p class="text-gray-900 whitespace-no-wrap"><%= cooler.cooler_sockets %></p>
            </td>
            <td class="px-5 py-5 text-sm text-right">
              <%# Format price from cents to dollars %>
              <p class="text-green-600 font-bold whitespace-no-wrap">$<%= '%.2f' % (cooler.price_cents / 100.0) %></p>
            </td>
            <td class="px-5 py-5 text-sm text-center">
              <%# This "Add" button only appears if a @build_id is present %>
              <% if @build_id.present? %>
                <%= button_to 'Add', build_build_items_path(build_id: @build_id, part_id: cooler.id, part_class: cooler.class.name),
                              params: { part_id: cooler.id },
                              class: "bg-green-500 hover:bg-green-700 text-white font-bold py-1 px-3 rounded text-xs" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>