<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">
      Power Supply Catalog
    </h1>
  </div>
  
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full leading-normal">
      <thead>
        <tr class="border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
          <th class="px-5 py-3">Brand</th>
          <th class="px-5 py-3">Name</th>
          <th class="px-5 py-3 text-center">Efficiency Rating</th>
          <th class="px-5 py-3 text-center">Modularity</th>
          <th class="px-5 py-3 text-right">Wattage</th>
          <th class="px-5 py-3 text-right">Price</th>
          <th class="px-5 py-3"></th>
        </tr>
      </thead>
      <tbody>
        <% @psus.each do |power_supply| %>
          <tr class="hover:bg-gray-50 border-b border-gray-200">
            <td class="px-5 py-5 text-sm">
              <p class="text-gray-900 whitespace-no-wrap"><%= power_supply.brand %></p>
            </td>
            <td class="px-5 py-5 text-sm">
              <p class="text-gray-900 whitespace-no-wrap font-semibold"><%= power_supply.name %></p>
            </td>
            <td class="px-5 py-5 text-sm text-center">
              <p class="text-gray-900 whitespace-no-wrap"><%= power_supply.psu_efficiency %></p>
            </td>
            <td class="px-5 py-5 text-sm text-center">
              <p class="text-gray-900 whitespace-no-wrap font-semibold"><%= power_supply.psu_modularity %></p>
            </td>
            <td class="px-5 py-5 text-sm text-right">
              <p class="text-gray-900 whitespace-no-wrap"><%= power_supply.psu_wattage %></p>
            </td>
            <td class="px-5 py-5 text-sm text-right">
              <%# Format price from cents to dollars %>
              <p class="text-green-600 font-bold whitespace-no-wrap">$<%= '%.2f' % (power_supply.price_cents / 100.0) %></p>
            </td>
            <td class="px-5 py-5 text-sm text-center">
              <%# This "Add" button only appears if a @build_id is present %>
              <% if @build_id.present? %>
                <%= button_to 'Add', build_build_items_path(build_id: @build_id, part_id: power_supply.id, part_class: power_supply.class.name),
                              params: { part_id: power_supply.id },
                              class: "bg-green-500 hover:bg-green-700 text-white font-bold py-1 px-3 rounded text-xs" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>