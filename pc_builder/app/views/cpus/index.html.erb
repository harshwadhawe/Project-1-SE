<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">
      CPU Catalog
    </h1>
    <%# <%= link_to 'Add New CPU', new_cpu_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %> %>
  </div>
  
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full leading-normal">
      <thead>
        <tr class="border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
          <th class="px-5 py-3">Brand</th>
          <th class="px-5 py-3">Name</th>
       
          <th class="px-5 py-3 text-center">Cores</th>
          <th class="px-5 py-3 text-center">Threads</th>
          <th class="px-5 py-3 text-right">Base Clock (GHz)</th>
          <th class="px-5 py-3 text-right">Boost Clock (GHz)</th>
          <th class="px-5 py-3 text-right">TDP (Watts)</th>
          <th class="px-5 py-3 text-right">Price</th>
          <th class="px-5 py-3"></th>
        </tr>
      </thead>
      <tbody>
        <%# Loop through the @cpus collection passed from the CpusController %>
        <% @cpus.each do |cpu| %>
          <tr class="hover:bg-gray-50 border-b border-gray-200">
            <td class="px-5 py-5 text-sm">
              <p class="text-gray-900 whitespace-no-wrap"><%= cpu.brand %></p>
            </td>
            <td class="px-5 py-5 text-sm">
              <p class="text-gray-900 whitespace-no-wrap font-semibold"><%= cpu.name %></p>
            </td>
            <td class="px-5 py-5 text-sm text-center">
              <p class="text-gray-900 whitespace-no-wrap"><%= cpu.cpu_cores %></p>
            </td>
            <td class="px-5 py-5 text-sm text-center">
              <p class="text-gray-900 whitespace-no-wrap"><%= cpu.cpu_threads %></p>
            </td>
            <td class="px-5 py-5 text-sm text-right">
              <p class="text-gray-900 whitespace-no-wrap"><%= '%.2f' % cpu.cpu_core_clock %></p>
            </td>
            <td class="px-5 py-5 text-sm text-right">
              <p class="text-gray-900 whitespace-no-wrap"><%= '%.2f' % cpu.cpu_boost_clock %></p>
            </td>
            <td class="px-5 py-5 text-sm text-right">
              <p class="text-gray-900 whitespace-no-wrap"><%= cpu.wattage %></p>
            </td>
            <td class="px-5 py-5 text-sm text-right">
              <%# Format price from cents to dollars %>
              <p class="text-green-600 font-bold whitespace-no-wrap">$<%= '%.2f' % (cpu.price_cents / 100.0) %></p>
            </td>
            <td class="px-5 py-5 text-sm text-center">
              <%# This "Add" button only appears if a @build_id is present %>
              <% if @build_id.present? %>
                <%= button_to 'Add', build_build_items_path(build_id: @build_id, part_id: cpu.id, part_class: cpu.class.name),
                              params: { part_id: cpu.id },
                              class: "bg-green-500 hover:bg-green-700 text-white font-bold py-1 px-3 rounded text-xs" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
