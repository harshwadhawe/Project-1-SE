<div class="container mx-auto px-4 py-8 max-w-lg">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">
    Start a New PC Build
  </h1>

  <%= form_with(model: @build, class: "bg-white shadow-md rounded-lg p-8") do |form| %>

    <% if @build.errors.any? %>
      <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <strong class="font-bold"><%= pluralize(@build.errors.count, "error") %> prohibited this build from being saved:</strong>
        <ul class="mt-2 list-disc list-inside">
          <% @build.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :name, "Build Name", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "e.g., My Gaming Rig" %>
    </div>

    <div class="flex items-center justify-end">
      <%= form.submit "Create Build", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
    </div>
  <% end %>
</div>